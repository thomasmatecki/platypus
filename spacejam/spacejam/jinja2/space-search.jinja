{% extends "base.jinja" %}
{% block main_content %}
    <div class="px-16">
        <form hx-trigger="change" hx-target="#results" hx-get="/api/spaces.html/">
            <div class="form-control">
                <input name="search"
                       type="search"
                       placeholder="Search"
                       class="input input-primary input-bordered rounded-b-none"/>
                <div class="flex">
                    <select class="w-1/4 select select-bordered select-primary rounded-r-none rounded-t-none">
                        <option disabled="disabled" selected="selected">
                            Distance
                        </option>
                        <option>
                            1 mile
                        </option>
                        <option>
                            5 miles
                        </option>
                        <option>
                            10 miles
                        </option>
                    </select>
                    <input name="place"
                           type="search"
                           placeholder="Zip Code or Place"
                           class="flex-auto input input-primary input-bordered rounded-l-none rounded-t-none"/>
                </div>
            </form>
        </div>
        <div id="results">{% include "space-list.jinja" %}</div>
    </div>
{% endblock main_content %}
